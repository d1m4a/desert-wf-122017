footer.footer
    .footer__row.footer__row_top
        .footer__left
            ul.nav-menu
                each link in ['Мои работы', "Обо мне", "Блог", "Авторизация"]
                    li.nav-menu__item
                        a(href="#").nav-menu__link= link
        .footer__right
            ul.socials
                each item in ['vk','github','in']
                    li.socials__item
                        a(href="#").socials__link
                            +svg(`socials__ic socials__ic-${item}`, `${item}`)
